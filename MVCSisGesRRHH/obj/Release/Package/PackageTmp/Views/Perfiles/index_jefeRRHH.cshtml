    function getUUOO(_id)
    {        
        var params = { id: _id };        
        $.ajax({
            type: "GET",
            url: controladorApp.obtenerRutaBase() + "Perfiles/ConsultarUUOO",
            data: params,
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (response) {
                if (response != null) {
                    paramUUOO = response;                    
                    getOrganos(paramUUOO.iCodOrgano);
                    getUnidadesOrganicas(paramUUOO.iCodOrgano, paramUUOO.iCodDependencia);
                    $("#ddlOrgano_busqueda").attr('disabled',true);;
                    $("#ddlUUOO_busqueda").attr('disabled',true);;
                    
                }
            }

        });

    }
    function getOrganos(id) {        
        $.ajax({
            type: "GET",
            url: controladorApp.obtenerRutaBase() + "Perfiles/ListarOrganos",            
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (response) {
                if (response != null) {
                    paramUUOO = response;
                    //alert(paramUUOO.strOrgano);
                    if (paramUUOO.length > 0) {
                        for (var i = 0; i <= paramUUOO.length - 1; i++) {
                            if (paramUUOO[i].iCodigoDependencia==id) {
                                $("<option value='" + paramUUOO[i].iCodigoDependencia + "' selected>" + paramUUOO[i].strUnidad_Organica + "</option>").appendTo("#ddlOrgano_busqueda");
                            }
                            else {
                                $("<option value='" + paramUUOO[i].iCodigoDependencia + "'>" + paramUUOO[i].strUnidad_Organica + "</option>").appendTo("#ddlOrgano_busqueda");
                            }
                            
                        }
                    }

                }
            }

        });
    }
    function getUnidadesOrganicas(_id, cod_dep) {
        var params = { id: _id };
        $.ajax({
            type: "GET",
            url: controladorApp.obtenerRutaBase() + "Perfiles/ListarUnidadesOrganicas",
            data: params,
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (response) {
                if (response != null) {
                    paramUUOO = response;
                    if (paramUUOO.length > 0) {
                        for (var i = 0; i <= paramUUOO.length - 1; i++) {
                            if (paramUUOO[i].iCodigoDependencia == cod_dep) {
                                $("<option value='" + paramUUOO[i].iCodigoDependencia + "' selected>" + paramUUOO[i].strUnidad_Organica + "</option>").appendTo("#ddlUUOO_busqueda");
                            }
                            else {
                                $("<option value='" + paramUUOO[i].iCodigoDependencia + "'>" + paramUUOO[i].strUnidad_Organica + "</option>").appendTo("#ddlUUOO_busqueda");
                            }
                            
                        }
                    }

                }
            }

        });
    }

    </script>
